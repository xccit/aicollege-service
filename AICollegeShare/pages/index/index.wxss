page {
    width: 100%;
    height: 100%;
    background-color: #fcfcfc;
}

.logo {
    width: 100%;
    height: 60px;
    display: flex;
    flex-wrap: nowrap;
    background-color: #FFFFFF;
}

.logoBox {
    width: calc(100% - 130px);
}

.logoBox image {
    width: 100%;
    height: 100%;
}

.input {
    width: 130px;
    height: 100%;
    display: flex;
}

.input input {
    width: calc(100% - 20px);
    padding-left: 10px;
    height: 20px;
    line-height: 20px;
    position: relative;
    left: 10px;
    font-size: 12px;
    border-radius: 10px;
    border: 1px solid #00000090;
    top: 20px;
}
.input image {
    width: 20px;
    height: 20px;
    position: relative;
    top: 22px;
    right: 10px;
}

.slide-image{
    height: 100%;
    width: 100%;
}

.bar_title {
    width: 100%;
    height: 50px;
    line-height: 50px;
    text-align: center;
    background-color: #FFFFFF;
    margin-top: 5px;
}
.shop_box {
    width: 100%;
    height: auto;
    display: flex;
    flex-wrap: wrap;
}
.shop_item:active{
    background-color: #eeeeee;
}
.shop_item {
    width: calc(100% - 10px);
    height: 100px;
    background-color: #FFFFFF;
    border-radius: 2px;
    margin: 5px auto;
    /**
        这两句 弹性布局
        弹性 不换行
    */
    display: flex;
    flex-wrap: nowrap;
}
.item_img {
    width: 100px;
    height: 100px;
}
.item_img image{
    width: 80px;
    height: 80px;
    position: relative;
    top: 10px;
    left: 10px;
    border-radius: 5px;
}
.item_text {
    width: calc(100% - 100px);
    height: 90px;
    position: relative;
    top: 5px;
}
.item_title {
    width: 100%;
    height: 30px;
    line-height: 30px;
    font-size: 16px;
    font-weight: bold;
    overflow: hidden;
}
.item_describe {
    width: 100%;
    height: 60px;
    line-height: 20px;
    font-size: 14px;
    color: #00000090;
    overflow: hidden;
}
.item_lables {
    width: 100%;
    height: 20px;
    display: flex;
    flex-wrap: nowrap;
}

.item_price {
    width: auto;
    color: #FF0000;
    overflow: hidden;
}
.item_lable {
    width: auto;
    padding-left: 5px;
    padding-right: 5px;
    height: 20px;
    font-size: 12px;
    line-height: 20px;
    border-radius: 5px;
    margin-left: 5px;
    color: #FFFFFF;
    background-color: #FF0000;
}