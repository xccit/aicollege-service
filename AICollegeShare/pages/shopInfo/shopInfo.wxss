@import "../mine/mine.wxss";

page {
    background-color: #f8f8f8;
    padding-bottom: 90px;
}

.luunboImg {
    width: 100%;
    height: 150px;
    overflow: hidden;
}

.shop_title {
    width: calc(100% - 20px);
    height: auto;
    margin: 0 auto;
    display: inline-table;
    padding-bottom: 10px;
}

.shop_price {
    width: calc(100% - 20px);
    margin: 0px auto;
    height: 50px;
    line-height: 50px;
    font-size: 16px;
    color: #00000090;
    font-weight: bold;

}

.moreBox {
    width: 100%;
    height: auto;
    display: flex;
    flex-wrap: wrap;

}


.shop_name {
    width: calc(100% - 20px);
    margin: 0 auto;
    height: 40px;
    line-height: 40px;
    font-size: 16px;
    font-weight: bold;
    color: #000000;
    overflow: hidden;
}

.addShopCar {
    width: 100%;
    height: 50px;
    position: fixed;
    bottom: 0px;
    background-color: #FFFFFF;
    border-top: 1px solid #FFFFFF;
    display: flex;
    flex-wrap: nowrap;
    justify-content: space-between;
}

.addShopText {
    width: 200px;
    height: 50px;
    display: flex;
    flex-wrap: nowrap;
    justify-content: space-evenly;
}

.addShopBtn {
    width: 150px;
    height: 50px;
    color: #FFFFFF;
    line-height: 50px;
    text-align: center;
    background-color: #FF4400;
}

.addShopTextItem {
    width: 50px;
    height: 50px;
    background-color: #FFFFFF;
}

.addShopTextItemImg {
    width: 50px;
    height: 30px;
}

.addShopTextItemImg image {
    width: 24px;
    height: 24px;
    position: relative;
    left: 13px;
    top: 3px;
}

.addShopTextItemText {
    width: 50px;
    height: 20px;
    line-height: 20px;
    font-size: 12px;
    text-align: center;
    color: #00000060;
}


.slide-image{
    height: 100%;
    width: 100%;
}


.shop_info_box {
    width: 100%;
    height: 300px;
    margin-top: 5px;
    overflow: hidden;
}

.shop_info_img {
    width: 100%;
    height: 100%;
}


.shop_info {
    width: calc(100% - 20px);
    height: auto;
    position: relative;
    left: 10px;
    min-height: 20px;
    overflow: hidden;
    max-height: 120px;
    line-height: 30px;
    font-size: 14px;
    color: #00000090;
    
    
}

.more_shop_title {
    width: calc(100% - 10px);
    margin: 0 auto;
    height: 30px;
    line-height: 30px;
    text-align: left;
    font-size: 16px;
    color: #000000;
    overflow: hidden;
}
.more_shop_info {
    width: calc(100% - 10px);
    position: relative;
    left: 5px;
    height: auto;
    line-height: 20px;
    max-height: 60px;
    font-size: 14px;
    overflow: hidden;
    color: #00000090;
}