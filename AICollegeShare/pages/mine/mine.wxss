page {
  background-color: #f8f8f8;
}

.mine_loginBox {
  width: 100px;
  height: 40px;
  position: relative;
  top: 30px;
  background-color: #4f60f8;
  color: #FFFFFF;
}


.mine_box {
  width: 100%;
  height: 100px;
  display: flex;
  flex-wrap: nowrap;
  background-color: #FFFFFF;
}

.mine_img {
  width: 100px;
  height: 100px;
}

.mine_img image {
  width: 80px;
  height: 80px;
  position: relative;
  top: 10px;
  left: 10px;
  border-radius: 5px;
}

.mine_text {
  width: calc(100% - 100px);
  height: 80px;
  margin-top: 10px;
}

.mine_nickname {
  width: 100%;
  height: 30px;
  line-height: 30px;
  font-size: 16px;
}

.mine_other {
  width: 100%;
  height: 50px;
  display: flex;
  flex-wrap: nowrap;
}

.mine_sex {
  width: 50px;
  height: 50px;
}

.mine_sex image {
  width: 20px;
  height: 20px;
  position: relative;
  top: 15px;
  left: 10px;
}

.mine_btn {
  width: calc(100% - 50px);
  height: 30px;
  margin-top: 10px;
}

.mine_btn button:active {
  background-color: #6573ec;
}

.mine_btn button {
  width: 110px;
  height: 30px;
  font-size: 14px;
  float: left;
  background-color: #4f60f8;
  color: #FFFFFF;
}

.set_item {
  width: 100%;
  height: 40px;
  margin-top: 10px;
  background-color: #FFFFFF;
}

.set_item_box {
  width: calc(100% - 20px);
  height: 100%;
  margin: 0 auto;
  display: flex;
  flex-wrap: nowrap;
}

.set_item_img {
  width: 40px;
  height: 40px;
}

.set_item_img image {
  width: 20px;
  height: 20px;
  position: relative;
  top: 10px;
  left: 10px;
}

.set_item_text {
  width: calc(100% - 40px);
  height: 40px;
  line-height: 40px;
  text-align: left;
  font-size: 14px;
}

.set_item:active {
  background-color: #ececec;
}



.state {
  width: 100%;
  height: 70px;
  background-color: #FFFFFF;
  margin-top: 10px;
  display: flex;
  justify-content: space-evenly;
}

.state_item {
  margin-top: 5px;
  width: 60px;
  height: 60px;
  background-color: #FFFFFF;
}

.state_image {
  width: 60px;
  height: 45px;
}

.state_image image {
  width: 30px;
  height: 30px;
  position: relative;
  top: 7px;
  left: 15px;
}

.state_text {
  width: 60px;
  height: 15px;
  line-height: 15px;
  text-align: center;
  font-size: 12px;
}

.title {
  width: 100%;
  height: 50px;
  line-height: 50px;
  text-align: center;
  font-size: 16px;
  color: #252525;
  font-weight: bold;
  margin-top: 10px;
  background-color: #FFFFFF;
}

.shop_item {
  width: 50%;
  height: auto;
  margin-top: 10px;
  float: left;
}
.shop_mid {
  width: calc(100% - 10px);
  margin: 0 auto;
  height: auto;
  padding-bottom: 5px;
  background-color: #FFFFFF;
}

.shop_img {
  width: 100%;
  height: 150px;
}
.shop_img image{
  width: calc(100% - 20px);
  height: 130px;
  position: relative;
  top: 10px;
  left: 10px;
  border-radius: 5px;
}
.shop_price {
  width: calc(100% - 20px);
  height: 30px;
  margin: 0 auto;
  line-height: 30px;
  font-size: 16px;
  font-weight: bold;
  color: #000000;
  overflow: hidden;
}
.shop_title {
  width: calc(100% - 20px);
  height: auto;
  margin: 5px auto;
  line-height: 20px;
  max-height: 40px;
  font-size: 14px;
  overflow: hidden;
  color: #252525;
}